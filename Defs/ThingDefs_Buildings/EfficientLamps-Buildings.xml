<?xml version="1.0" encoding="utf-8" ?>
<Buildings>
  <!-- Unfortunately, it seems I can't extend the abstract StandingLampBase and simply override power attributes. -->
  <!-- TODO Figure out an implmentation that doesn't require copy-pasting the whole StandingLampBase to redefine it. -->
  <!-- CFL Standing Lamps -->
  <ThingDef Abstract="True" Name="EfficientLampCFLBase" ParentName="BuildingBase">
    <thingClass>Building</thingClass>
    <category>Building</category>
    <minifiedDef>MinifiedFurniture</minifiedDef>
    <altitudeLayer>Waist</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <selectable>true</selectable>
    <fillPercent>0.20</fillPercent>
    <costList>
      <Steel>20</Steel>
    </costList>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <designationCategory>Furniture</designationCategory>
    <rotatable>false</rotatable>
    <graphicData>
      <texPath>Things/Building/Furniture/LampStanding</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shadowData>
        <volume>(0.3, 0.6, 0.3)</volume>
        <offset>(0,0,-0.1)</offset>
      </shadowData>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
    </graphicData>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>50</basePowerConsumption>
        <shortCircuitInRain>false</shortCircuitInRain>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToMake>170</WorkToMake>
      <Flammability>1.0</Flammability>
    </statBases>
  </ThingDef>
  <ThingDef ParentName="EfficientLampCFLBase">
    <defName>EfficientLampCFL</defName>
    <label>Standing lamp (CFL)</label>
    <description>Efficient fluorescent lamp that lights an area.</description>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>12</glowRadius>
        <glowColor>(200,220,240,0)</glowColor>
      </li>
    </comps>
    <researchPrerequisites>
      <li>EfficientLampCFLs</li>
    </researchPrerequisites>
  </ThingDef>
