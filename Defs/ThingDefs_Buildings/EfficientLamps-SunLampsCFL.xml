<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- CFL Sun Lamp -->
  <ThingDef ParentName="LampBase">
    <defName>EfficientSunLampCFL</defName>
    <label>sun lamp (CFL)</label>
    <thingClass>Building_SunLamp</thingClass>
    <graphicData>
      <texPath>EfficientLamps/LampSunCFL</texPath>
    </graphicData>
    <description>Efficiently lights an area brightly enough to grow crops.</description>
    <costList>
      <Steel>30</Steel>
    </costList>
    <statBases>
      <Mass>4.5</Mass>
    </statBases>
    <comps>
      <li Class="CompProperties_Glower">
        <overlightRadius>7.0</overlightRadius>
        <glowRadius>14</glowRadius>
        <glowColor>(370,370,370,0)</glowColor>
      </li>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>600</basePowerConsumption>
      </li>
    </comps>
    <specialDisplayRadius>5.8</specialDisplayRadius>
    <researchPrerequisites>
      <li>EfficientLampCFLs</li>
    </researchPrerequisites>
  </ThingDef>
</Defs>
